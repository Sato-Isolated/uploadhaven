{
  "info": {
    "name": "UploadHaven API Collection",
    "description": "Complete API collection for UploadHaven file sharing platform",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "file_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "short_url",
      "value": "",
      "type": "string"
    }
  ],
  "auth": {
    "type": "noauth"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Sign Up",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"securepassword123\",\n  \"name\": \"John Doe\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/signup",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "signup"]
            }
          }
        },
        {
          "name": "Sign In",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"securepassword123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/signin",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "signin"]
            }
          }
        },
        {
          "name": "Sign Out",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/auth/signout",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "signout"]
            }
          }
        }
      ]
    },
    {
      "name": "File Management",
      "item": [
        {
          "name": "Upload File",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "expiration",
                  "value": "24h",
                  "type": "text"
                },
                {
                  "key": "password",
                  "value": "optional-password",
                  "type": "text",
                  "disabled": true
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "upload"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.fileId) {",
                  "        pm.collectionVariables.set('file_id', response.fileId);",
                  "    }",
                  "    if (response.shortUrl) {",
                  "        const shortUrl = response.shortUrl.split('/').pop();",
                  "        pm.collectionVariables.set('short_url', shortUrl);",
                  "    }",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get File Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/files/{{file_id}}/info",
              "host": ["{{base_url}}"],
              "path": ["api", "files", "{{file_id}}", "info"]
            }
          }
        },
        {
          "name": "Download File",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/download/{{file_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "download", "{{file_id}}"]
            }
          }
        },
        {
          "name": "Get File Thumbnail",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/thumbnail/{{file_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "thumbnail", "{{file_id}}"]
            }
          }
        },
        {
          "name": "Delete File",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/files/{{file_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "files", "{{file_id}}"]
            }
          }
        },
        {
          "name": "Get User Files",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/files?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "files"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Notifications",
      "item": [
        {
          "name": "Get Notifications",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/notifications",
              "host": ["{{base_url}}"],
              "path": ["api", "notifications"]
            }
          }
        },
        {
          "name": "Mark Notification as Read",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notificationId\": \"notification_id_here\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/notifications",
              "host": ["{{base_url}}"],
              "path": ["api", "notifications"]
            }
          }
        },
        {
          "name": "SSE Stream (Test in Browser)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "text/event-stream"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/notifications/stream",
              "host": ["{{base_url}}"],
              "path": ["api", "notifications", "stream"]
            }
          }
        }
      ]
    },
    {
      "name": "Analytics",
      "item": [
        {
          "name": "Get User Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/stats",
              "host": ["{{base_url}}"],
              "path": ["api", "stats"]
            }
          }
        },
        {
          "name": "Get Analytics Data",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/analytics?period=7d",
              "host": ["{{base_url}}"],
              "path": ["api", "analytics"],
              "query": [
                {
                  "key": "period",
                  "value": "7d"
                }
              ]
            }
          }
        },
        {
          "name": "Get User Activity",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/events?page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "events"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Security",
      "item": [
        {
          "name": "Scan File",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fileId\": \"{{file_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/security/scan",
              "host": ["{{base_url}}"],
              "path": ["api", "security", "scan"]
            }
          }
        },
        {
          "name": "Get Security Events",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/security/events",
              "host": ["{{base_url}}"],
              "path": ["api", "security", "events"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin (Requires Admin Role)",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/admin/users",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "users"]
            }
          }
        },
        {
          "name": "Create System Notification",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"System maintenance scheduled for tonight\",\n  \"type\": \"system\",\n  \"priority\": \"high\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/admin/notifications",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "notifications"]
            }
          }
        },
        {
          "name": "Bulk Delete Files",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fileIds\": [\"file1\", \"file2\", \"file3\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/bulk-delete",
              "host": ["{{base_url}}"],
              "path": ["api", "bulk-delete"]
            }
          }
        }
      ]
    },
    {
      "name": "Public File Access",
      "item": [
        {
          "name": "Access Shared File",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/s/{{short_url}}",
              "host": ["{{base_url}}"],
              "path": ["s", "{{short_url}}"]
            }
          }
        },
        {
          "name": "Access Password Protected File",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"password\": \"file-password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/s/{{short_url}}",
              "host": ["{{base_url}}"],
              "path": ["s", "{{short_url}}"]
            }
          }
        }
      ]
    }
  ]
}
