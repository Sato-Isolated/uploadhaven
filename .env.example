# Database
MONGODB_URI=mongodb://localhost:27017/uploadhaven

# Authentication & Authorization
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# Application URLs
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Internal API Security
INTERNAL_API_KEY=internal-secure-key-for-background-jobs

# Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_TYPES=image/*,text/*,application/pdf,application/zip
NEXT_PUBLIC_DEFAULT_EXPIRY=24
UPLOADS_DIR=./public/uploads
UPLOAD_DIR=./public/uploads

# Rate Limiting
RATE_LIMIT_MAX=10
RATE_LIMIT_WINDOW=900000

# Development Configuration
NODE_ENV=development
